<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OC_P9_kotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/darker_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_purple</item>
        <item name="colorSecondaryVariant">@color/darker_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>

        <item name="actionMenuTextAppearance">@color/red</item>
        <item name="actionMenuTextColor">@color/red</item>
        <item name="android:actionMenuTextColor">@color/red</item>
        <item name="android:actionMenuTextAppearance">@color/red</item>





    </style>


    <style name="CustomTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="CustomButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Theme.OC_P9_kotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OC_P9_kotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OC_P9_kotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
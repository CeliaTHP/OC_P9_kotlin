<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OC_P9_kotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--
     <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
     <item name="android:buttonStyle">@style/CustomButtonStyle</item>
     -->
 </style>

 <style name="CustomTextViewStyle" parent="android:Widget.TextView">
     <item name="fontFamily">sans-serif</item>
 </style>

 <style name="CustomButtonStyle" parent="android:Widget.Holo.Button">
     <item name="fontFamily">sans-serif</item>
 </style>

 <style name="Theme.OC_P9_kotlin.NoActionBar">
     <item name="windowActionBar">false</item>
     <item name="windowNoTitle">true</item>
 </style>

 <style name="Theme.OC_P9_kotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

 <style name="Theme.OC_P9_kotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>